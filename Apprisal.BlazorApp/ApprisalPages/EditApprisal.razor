@page "/edit/{id:int}"
<h3>EditApprisal</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApprisalId" />


            <div class="col-md-6">
                <label asp-for="EvoluvationPeriod" class="control-label"></label>
                <select asp-for="EvoluvationPeriod" class="form-control">
                    <option value="">Select Evaluation Period</option>
                    <option value="April-2018 to March-2019">April-2018 to March-2019</option>
                    <option value="April-2019 to March-2020">April-2019 to March-2020</option>
                    <option value="April-2020 to March-2021">April-2020 to March-2021</option>
                    <option value="April-2021 to March-2022">April-2021 to March-2022</option>
                    <option value="April-2022 to March-2023">April-2022 to March-2023</option>
                </select>
                <span asp-validation-for="EvoluvationPeriod" class="text-danger"></span>

            </div>



            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group col-md-6">
                <label asp-for="DateOfJoin" class="control-label"></label>
                <input asp-for="DateOfJoin" class="form-control" />
                <span asp-validation-for="DateOfJoin" class="text-danger"></span>
            </div>


            <div class="form-group col-md-6">
                <label asp-for="NumberOfLeavesTaken" class="control-label"></label>
                <input asp-for="NumberOfLeavesTaken" class="form-control" />
                <span asp-validation-for="NumberOfLeavesTaken" class="text-danger"></span>
            </div><br />




            <div>
                <h6 class=" text-black ">Accomplishments</h6>

                <div class="form-group col-md-8">
                    <label asp-for="ClientDelivery" class="control-label"></label><br />

                    <div class="row">
                        <div class=" col-md-4">
                            <select asp-for="ClientDelivery" class="form-control" asp-items="Html.GetEnumSelectList<ClientDelivery>()">
                                <option value=" ">Select Rating</option>
                            </select>
                            <span asp-validation-for="ClientDelivery" class="text-danger"></span>

                        </div>
                        <div class="col-sm-6">
                            <textarea asp-for="ClientDeliveryFeed" class="form-control"></textarea>
                            <span asp-validation-for="ClientDeliveryFeed" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            <br />





            <div class="form-group col-md-8">
                <label asp-for="Responsibility" class="control-label">Responsibility to Others</label>
                <div class="row">
                    <div class=" col-md-4">
                        <select asp-for="Responsibility" class="form-control" asp-items="Html.GetEnumSelectList<Responsibilities>()">
                            <option>Give Rating</option>
                        </select>
                        <span asp-validation-for="Responsibility" class="text-danger"></span><br />
                    </div>
                    <div class="col-sm-6">
                        <textarea asp-for="ResponsibilitiesFeed" class="form-control"></textarea>
                        <span asp-validation-for="ResponsibilitiesFeed" class="text-danger"></span>
                    </div>
                </div>

            </div><br />



            <div class="form-group col-md-8">
                <label asp-for="Skills" class="control-label"></label>
                <div class="row">
                    <div class=" col-md-4">
                        <select asp-for="Skills" class="form-control" asp-items="Html.GetEnumSelectList<Skill>()">
                            <option>Select Skills</option>
                        </select>
                        <span asp-validation-for="Skills" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <textarea asp-for="SkillsFeed" class="form-control"></textarea>
                        <span asp-validation-for="SkillsFeed" class="text-danger"></span><br />
                    </div>
                </div>

            </div><br />



            <div class="form-group col-md-6">
                <label asp-for="Certifiate" class="control-label"></label>
                <input asp-for="Certifiate" class="form-control" />
                <span asp-validation-for="Certifiate" class="text-danger"></span>
            </div>



            <h6 class="form-group ">Mention any general comments or feedback here..  </h6>

            <div class="form-group col-md-6">
                <textarea asp-for="Feedback" class="form-control"></textarea>
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div><br />


            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

